{
	"name" : "BetterSimplify",
	"version" : "1.0.0",
	"manifest_version" : 2,
	"description" : "Simplify for web players: Pandora, Deezer, Vk, SoundCloud, and 8tracks",

	"content_scripts" : [
		{
			"run_at"  : "document_end",
			"matches" : ["http://*/*", "https://*/*"],
			"js" 		 : ["extensions.js"]
		}
	],

	"icons": {
		"16": "icon/icon16.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	},

	"externally_connectable": {

  		"matches":
  		[
  		"*://8tracks.com/*", 
"*://deezer.com/*", 
"*://play.google.com/*", 
"*://pandora.com/*", 
"*://plex.tv/*", 
"*://localhost/*", 
"*://127.0.0.1/*", 
"*://play.pocketcasts.com/*", 
"*://feedwrangler.net/*", 
"*://soundcloud.com/*", 
"*://vk.com/*", 
"*://music.yandex.ru/*"
  		]
	},

	"web_accessible_resources" : ["data/simplify.js",
								  "data/8tracks.js", 
"data/deezer.js", 
"data/google-music.js", 
"data/pandora.js", 
"data/plex.js", 
"data/pocketcasts.js", 
"data/podwrangler.js", 
"data/soundcloud.js", 
"data/vk.js", 
"data/yamusic.js"
								]
}
